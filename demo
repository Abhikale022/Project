import React, { useState } from "react";
import "./Home.css";
import Navbar from "./Navbar";
import Carousel from "./Carousel";
import QuickActions from "./QuickActions";
import CustomerLoginModal from "./CustomerLoginModal";
import SalesLoginModal from "./SalesLoginModal";

const HomePage = () => {
  const navItems = ["About Us", "Invest", "Offers", "Help", "Services"];

  const [showCustomer, setShowCustomer] = useState(false);
  const [showSales, setShowSales] = useState(false);

  return (
    <>
      {/* Navbar with button click handlers */}
      <Navbar
        brandName="Standard Chartered"
        navItems={navItems}
        onCustomerLoginClick={() => setShowCustomer(true)}
        onSalesLoginClick={() => setShowSales(true)}
      />

      {/* Main Content */}
      <Carousel />
      <QuickActions
        title="Quick Actions"
        subtitle="Everything you need to manage your credit cards and banking services in one place"
      />

      {/* Customer Modal */}
      <CustomerLoginModal
        show={showCustomer}
        onHide={() => setShowCustomer(false)}
      />

      {/* Sales Modal */}
      <SalesLoginModal
        show={showSales}
        onHide={() => setShowSales(false)}
      />
    </>
  );
};

export default HomePage;
