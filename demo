import React, { useState } from "react";
import "./Faq.css"; // we'll add styles separately

const Faq = () => {
  const [openIndex, setOpenIndex] = useState(null);

  const faqs = [
    {
      question: "What is a credit card?",
      answer:
        "A credit card is a simple and efficient way to make payments. It negates the need to carry cash or issue checks and is designed to make spending a rewarding experience. It helps in handling physical and online payments and is useful in emergencies.",
    },
    {
      question: "What are the benefits of a credit card?",
      answer:
        "Benefits include rewards programs, discounts, EMI conversion, digital payment solutions, and emergency cash access.",
    },
    {
      question: "What is the eligibility criteria to get a Standard Chartered Credit Card online?",
      answer:
        "Eligibility depends on age, income, employment type, and credit history as per bank norms.",
    },
    {
      question: "How to apply for a Standard Chartered Credit Card?",
      answer:
        "You can apply online through the official Standard Chartered Bank website, complete KYC, and get instant approval in many cases.",
    },
    {
      question: "What are the types of Credit Cards offered by Standard Chartered in India?",
      answer:
        "Standard Chartered offers multiple cards including rewards cards, cashback cards, lifestyle cards, and premium travel cards.",
    },
  ];

  const toggleFAQ = (index) => {
    setOpenIndex(openIndex === index ? null : index);
  };

  return (
    <div className="faq-container">
      <h1>FAQâ€™s of Standard Chartered Bank Credit Card</h1>
      {faqs.map((faq, index) => (
        <div className="faq-item" key={index}>
          <button className="faq-question" onClick={() => toggleFAQ(index)}>
            {faq.question}
          </button>
          <div className={`faq-answer ${openIndex === index ? "open" : ""}`}>
            <p>{faq.answer}</p>
          </div>
        </div>
      ))}
    </div>
  );
};

export default Faq;