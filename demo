package com.scb.creditcardorigination.salesuser.service;

import com.scb.creditcardorigination.salesuser.model.SalesUser;
import com.scb.creditcardorigination.salesuser.repository.SalesUserRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.crypto.password.PasswordEncoder;
import org.springframework.stereotype.Service;

@Service
public class SalesUserServiceImpl implements SalesUserService {

    @Autowired
    private SalesUserRepository salesUserRepository;

    @Autowired
    private PasswordEncoder passwordEncoder;

    @Override
    public String login(String userId, String password) {
        return salesUserRepository.findByUserId(userId)
                .filter(u -> passwordEncoder.matches(password, u.getPassword()))
                .map(SalesUser::getUserId)
                .map(u -> "SalesUser login successful: " + u)
                .orElse("Invalid userId or password");
    }
}